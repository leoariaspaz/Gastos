        <%= select_tag "id", options_for_select(current_user.cuentas.all_for_select, flash[:cuenta_id]),
              {class: "form-control", style: "display: inline; max-width: 40%; margin-rigth: 10px;"} %>
        <span style="width: 10px; display: inline-block;"></span>

