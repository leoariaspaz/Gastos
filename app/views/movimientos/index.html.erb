         al 
        <%= text_field_tag "fecha_hasta", format_date(@fecha_hasta), class: "form-control date-picker" %>
        <span style="width: 10px; display: inline-block;"></span>

        <%= submit_tag "Consultar", class: 'btn btn-default', role: 'button'%>
