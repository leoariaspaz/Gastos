<% content_for :title, "Consolidado de movimientos" %>

<div class="row">
  <h1 class="col-sm-12">Consolidado de movimientos</h1>
</div>

<table class="table table-striped table-responsive table-bordered">
  <thead>
    <tr>
      <th class="text-center">Cuenta</th>
      <th class="text-center">Importe</th>
    </tr>
  </thead>

  <tbody>
    <% @movimientos.each do |movimiento| %>
      <tr>
        <td><%= movimiento[1] %></td>
        <td class="text-right"><%= number_to_currency movimiento[0] %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td class="text-right"><strong>Total: </strong></td>
      <td class="text-right"><%= number_to_currency (@movimientos.sum { |m| m[0].to_f })%></td>
    </tr>
  </tfoot>
</table>
