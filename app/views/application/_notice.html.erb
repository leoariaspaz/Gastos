<div id="notice">
<% if notice %>
  <div class="alert alert-success alert-dismissable text-center no-padding">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= notice %>
  </div>
<% elsif error %>
  <div class="alert alert-danger alert-dismissable text-center no-padding">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <%= error %>
  </div>
<% end %>
</div>